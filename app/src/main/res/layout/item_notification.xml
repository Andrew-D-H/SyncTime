<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notificationRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@android:color/transparent">

    <!-- Tinted strip background option (set visible for some statuses) -->
    <View
        android:id="@+id/bgTint"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="16dp"
        android:background="#F3F0FF"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Avatar -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_account_circle_24"
        android:scaleType="centerCrop"
        android:background="@drawable/baseline_account_circle_24"
        android:padding="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Dot cue (status) -->
    <View
        android:id="@+id/viewDot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/bg_dot_accent"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatar"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        android:translationX="-10dp"
        android:translationY="-4dp"/>

    <!-- Three-dot menu -->
    <ImageView
        android:id="@+id/imgMore"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_more_vert"
        app:tint="#B0B0B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Title line: bold name + message -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gandalf the Grey has arrived at the Shire"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintEnd_toStartOf="@id/imgMore"
        app:layout_constraintTop_toTopOf="@id/imgAvatar"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"/>

    <!-- Secondary line: category + dot + time -->
    <TextView
        android:id="@+id/tvMeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Group â€¢ 5 min ago"
        android:textColor="#888888"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toStartOf="@id/imgMore"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="2dp"/>

    <!-- Divider between rows -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F0EEF9"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMeta"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
